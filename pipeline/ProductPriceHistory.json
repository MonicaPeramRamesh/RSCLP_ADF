{
	"name": "ProductPriceHistory",
	"properties": {
		"activities": [
			{
				"name": "get_productpricehistory_details",
				"type": "GetMetadata",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"dataset": {
						"referenceName": "productpricehistory_folder",
						"type": "DatasetReference",
						"parameters": {
							"date": {
								"value": "@formatDateTime(convertTimeZone(utcNow(), 'UTC', 'GMT Standard Time'), 'yyyy-MM-dd')\n",
								"type": "Expression"
							}
						}
					},
					"fieldList": [
						"childItems",
						"exists"
					],
					"storeSettings": {
						"type": "AzureBlobFSReadSettings",
						"recursive": true,
						"enablePartitionDiscovery": false
					}
				}
			},
			{
				"name": "iterate_productpricehistory_files",
				"type": "ForEach",
				"dependsOn": [
					{
						"activity": "get_productpricehistory_details",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@activity('get_productpricehistory_details').output.childItems",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "get_metadata_for_file",
							"type": "GetMetadata",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"dataset": {
									"referenceName": "productpricehistory_file",
									"type": "DatasetReference",
									"parameters": {
										"date": {
											"value": "@formatDateTime(convertTimeZone(utcNow(), 'UTC', 'GMT Standard Time'), 'yyyy-MM-dd')\n",
											"type": "Expression"
										},
										"file_name": {
											"value": "@item().name",
											"type": "Expression"
										}
									}
								},
								"fieldList": [
									"columnCount",
									"structure"
								],
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								}
							}
						},
						{
							"name": "column_validation_checks",
							"type": "IfCondition",
							"dependsOn": [
								{
									"activity": "get_metadata_for_file",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@and(\n    equals(activity('get_metadata_for_file').output.columnCount, 8),\n    and(\n        contains(string(activity('get_metadata_for_file').output.structure), 'ProductID'),\n        and(\n            contains(string(activity('get_metadata_for_file').output.structure), 'StoreID'),\n            and(\n                contains(string(activity('get_metadata_for_file').output.structure), 'SellingPrice'),\n                and(\n                    contains(string(activity('get_metadata_for_file').output.structure), 'UnitOfMeasure'),\n                    and(\n                        contains(string(activity('get_metadata_for_file').output.structure), 'UpdatedOn'),\n                        and(\n                            contains(string(activity('get_metadata_for_file').output.structure), 'UpdatedBy'),\n                            and(\n                                contains(string(activity('get_metadata_for_file').output.structure), 'UpdateReason'),\n                                contains(string(activity('get_metadata_for_file').output.structure), 'IsActive')\n                            )\n                        )\n                    )\n                )\n            )\n        )\n    )\n)\n",
									"type": "Expression"
								},
								"ifFalseActivities": [
									{
										"name": "invalid_productmaster_files",
										"type": "AppendVariable",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"variableName": "invalid_productpricehistory_files",
											"value": {
												"value": "@item().name",
												"type": "Expression"
											}
										}
									}
								],
								"ifTrueActivities": [
									{
										"name": "valid_product_master_files",
										"type": "AppendVariable",
										"dependsOn": [],
										"userProperties": [],
										"typeProperties": {
											"variableName": "valid_productpricehistory_files",
											"value": {
												"value": "@item().name",
												"type": "Expression"
											}
										}
									}
								]
							}
						}
					]
				}
			},
			{
				"name": "all_productpricehistory_files_valid_check",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "iterate_productpricehistory_files",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(\n    length(variables('valid_productpricehistory_files')),\n    length(activity('get_productpricehistory_details').output.childItems\n)\n)",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "invalid_productmaster_alert",
							"type": "WebActivity",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "POST",
								"url": {
									"value": "@pipeline().parameters.error_url",
									"type": "Expression"
								},
								"body": {
									"value": "@json(\n    concat(\n        '{',\n            '\"title\": \"Product Price History Error - Invalid Product Price History Excel File - ',\n                formatDateTime(convertTimeZone(utcNow(), 'UTC', 'GMT Standard Time'), 'yyyy-MM-dd'),\n            '\",',\n            '\"text\": \"Please find the Invalid Product Price History Excel for the day: ',\n                join(variables('invalid_productpricehistory_files'), ', '),\n            '\"',\n        '}'\n    )\n)\n",
									"type": "Expression"
								}
							}
						}
					],
					"ifTrueActivities": [
						{
							"name": "productpricehistory_job",
							"type": "DatabricksJob",
							"dependsOn": [],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"jobId": "643438746083177"
							},
							"linkedServiceName": {
								"referenceName": "AzureDatabricks_ls",
								"type": "LinkedServiceReference",
								"parameters": {
									"cluster_version": {
										"value": "@pipeline().globalParameters.cluster_version",
										"type": "Expression"
									},
									"cluster_nodetype": {
										"value": "@pipeline().globalParameters.cluster_nodetype",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "productmaster_dlt_alert",
							"type": "WebActivity",
							"dependsOn": [
								{
									"activity": "productpricehistory_job",
									"dependencyConditions": [
										"Failed"
									]
								}
							],
							"policy": {
								"timeout": "0.12:00:00",
								"retry": 0,
								"retryIntervalInSeconds": 30,
								"secureOutput": false,
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"method": "POST",
								"url": {
									"value": "@pipeline().parameters.error_url",
									"type": "Expression"
								},
								"body": {
									"value": "@json(\n    concat(\n        '{',\n            '\"title\": \"Product Price History Error - ',\n                formatDateTime(convertTimeZone(utcNow(), 'UTC', 'GMT Standard Time'), 'yyyy-MM-dd'),\n            '\",',\n            '\"text\": \"Product Price History DLT failed\"',\n        '}'\n    )\n)\n",
									"type": "Expression"
								}
							}
						}
					]
				}
			}
		],
		"parameters": {
			"error_url": {
				"type": "string"
			},
			"error_message": {
				"type": "string"
			}
		},
		"variables": {
			"valid_productpricehistory_files": {
				"type": "Array"
			},
			"invalid_productpricehistory_files": {
				"type": "Array"
			}
		},
		"annotations": []
	}
}